<div dojoType="dijit.layout.ContentPane" layoutAlign="client">
    <ol id='acl-ol'></ol>
</div>

<div class='hidden'>
    <div dojoType='openils.widget.ProgressDialog' jsId='progressDialog'/>
</div>

